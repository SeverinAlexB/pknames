    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug",
            "cargo": {
                "args": [
                    "build",
                    "--bin=fancyd-cli",
                    "--package=fancyd-cli"
                ],
                "filter": {
                    "name": "fancyd-cli",
                    "kind": "bin"
                }
            },
            "args": [
                "lookup",
                "example.com",
            ],
            "cwd": "${workspaceFolder}"
        },
    ]
}