    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Cli",
            "cargo": {
                "args": [
                    "build",
                    "--bin=pknamescli",
                    "--package=pknamescli"
                ],
                "filter": {
                    "name": "pknamescli",
                    "kind": "bin"
                }
            },
            "args": [
                "lookup",
                "apple.com"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Hermes",
            "cargo": {
                "args": [
                    "build",
                    "--bin=hermes",
                    "--package=pknames_hermes"
                ],
                "filter": {
                    "name": "hermes",
                    "kind": "bin"
                }
            },
            "args": [
                "-p",
                "54",
                "-f",
                "8.8.8.8"
            ],
            "cwd": "${workspaceFolder}"
        },
    ]
}